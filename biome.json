{
	"$schema": "node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn"
			},
			"a11y": {
				"useButtonType": "off",
				"noSvgWithoutTitle": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingCommas": "es5"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	}
}
